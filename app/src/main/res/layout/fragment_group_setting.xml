<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cks.hiroyuki2.worksupport3.Fragments.GroupSettingFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include
            android:id="@+id/header"
            layout="@layout/setting_header" />

        <RelativeLayout
            android:id="@+id/item_exit"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="16dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:background="?android:attr/selectableItemBackground">

            <ImageView
                android:id="@+id/exit_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="32dp"
                android:contentDescription=""
                android:src="@drawable/ic_exit_to_app_white_24dp"
                android:tint="@color/colorAccentDark"
                tools:ignore="ContentDescription" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/exit_icon"
                android:text="@string/exit_group"
                android:textColor="@color/cardview_dark_background"
                android:textSize="18sp" />

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="16dp"
            android:paddingLeft="16dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:text="@string/rv_title"
            android:textColor="@color/cardview_dark_background"
            android:background="@color/blue_gray_light"/>

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rv"/>

    </LinearLayout>

</ScrollView>
