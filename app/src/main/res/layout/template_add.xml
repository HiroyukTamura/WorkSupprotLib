<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content">

    <android.support.v7.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:paddingRight="24dp"
        android:paddingLeft="24dp"
        android:paddingBottom="16dp"
        android:numColumns="auto_fit"
        android:scrollbars="vertical"
        android:verticalSpacing="8dp"
        android:stretchMode="columnWidth"
        android:layout_gravity="center_horizontal"
        android:id="@+id/grid">

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:layout_column="1"
            app:layout_row="1"
            app:cardCornerRadius="8dp"
            app:cardUseCompatPadding="true"
            android:id="@+id/card0">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_columnWeight="1"
                android:orientation="vertical"
                android:padding="8dp"
                android:gravity="center_horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/dsc_comment" />

                <ImageView
                    android:layout_marginTop="8dp"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/screenshot_comment"
                    android:scaleType="fitXY"/>

            </LinearLayout>

        </android.support.v7.widget.CardView>

       <android.support.v7.widget.CardView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_margin="8dp"
           app:layout_column="2"
           app:layout_row="1"
           app:cardCornerRadius="8dp"
           app:cardUseCompatPadding="true"
           android:id="@+id/card1">

           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               app:layout_columnWeight="1"
               android:orientation="vertical"
               android:padding="8dp"
               android:gravity="center_horizontal">

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="@string/dsc_tag"/>

               <ImageView
                   android:layout_width="80dp"
                   android:layout_height="80dp"
                   android:layout_marginTop="8dp"
                   android:scaleType="fitXY"
                   android:adjustViewBounds="true"
                   android:src="@drawable/screenshot_tagpool" />

           </LinearLayout>

       </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:layout_column="1"
            app:layout_row="2"
            app:cardCornerRadius="8dp"
            app:cardUseCompatPadding="true"
            android:id="@+id/card2">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_columnWeight="1"
                android:orientation="vertical"
                android:padding="8dp"
                android:gravity="center_horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/dsc_plot" />

                <ImageView
                    android:layout_marginTop="8dp"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/screenshot_params"
                    android:scaleType="fitXY"/>

            </LinearLayout>

        </android.support.v7.widget.CardView>

    </android.support.v7.widget.GridLayout>

</FrameLayout>

